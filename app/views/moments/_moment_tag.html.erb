<% unless prev_element_same %>
  <div class="<%= 'label' if !next_element_same-%>
              <%= 'checked' if @moment.moment_tags.include?(moment_tag)-%>
              <%= 'disabled' unless (@moment.moment_tags & moment_tag.children_tags).blank? %>
  ">
    <div class="description">
      <%  if !next_element_same %>
        <div class="check-image"></div>
        <%= (check_box_tag "moment_tag_ids[]", moment_tag.id, (true if @moment.moment_tags.include?(moment_tag))) -%>
      <% end %>
      <h3 class="title"><%= moment_tag.name %></h3>
      <div class="clear"></div>
    </div>
  </div>
<% end %>
<% unless moment_tag.parent_question.blank? %>

  <div class="<%= 'label' if next_element_same or prev_element_same  -%>
              <%= 'checked' if @moment.moment_tags.include?(moment_tag)-%>
              <%= 'disabled' unless (@moment.moment_tags & moment_tag.children_tags).blank? %>
  ">
    <div class="description">
      <% if next_element_same or prev_element_same %>
        <div class="check-image"></div>
        <%= (check_box_tag "moment_tag_ids[]", moment_tag.id, (true if @moment.moment_tags.include?(moment_tag))) -%>
      <% end %>
      <div class="moment-tag-question"><%= moment_tag.parent_question -%></div>
      <div class="clear"></div>
    </div>
  </div>
<% end %>

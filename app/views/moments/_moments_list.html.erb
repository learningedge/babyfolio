<% unless @moments.blank? %>
<h2>Moments in your life</h2>
<div class="all-moments">
  <div class="preloader"></div>  
  <ul>
    <% @moments.each do |moment|  %>
      <li class="moment">
        <a href="<%=  edit_moment_path(:id => moment.id) -%>">
          <div class="thumb">            
              <%= get_moment_thumb moment.media.first, :moment_thumb %>           
          </div>
          <div class="description">
            <div class="row">
              <span class="col1">Title</span>:<span class="col2"><%= moment.title.blank? ? "..." : truncate(moment.title, :length => 15) -%></span>
            </div>
            <div class="row">
              <span class="col1">Type</span>:<span class="col2"><%= moment.media.first.media_type unless moment.media.blank? -%></span>
            </div>
            <div class="row">
              <%= moment.visibility %>
            </div>
          </div>
        </a>
      </li>
    <% end %>
  </ul>
  <div class="clear"></div>
</div>
  <%= will_paginate @moments, :page_links => false %>
<% else %>
<h2><a href="<%= child_new_moment_path(:child_id => @selected_child.id) -%>">Please enter a Story Moment (and photo/video). No entries submitted yet.</a></h2>
<% end %>

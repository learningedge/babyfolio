<div class="preloader">
</div>

<% if current_user.flickr_user %>

  <div class="flickr">

    <span id="selected-flickr-photos">
      <h2>Selected</h2>
    </span>

    <span id="flickr-ajax-grid"  class="flickr-grid">

	  <%= render :partial => 'flickr/sets_grid' %>

    </span>

    <div class="clear"></div>

  </div>

<% else %>

  <%= flash[:flickr_error] %>  

  <div>
    You dont have flickr account connected. 
    <%= link_to 'Click here', '/auth/flickr?display=popup', :onclick => "window.open(this.href, 'flickr_login', 'height=545,width=1020');return false;" -%> to connect one.
  </div>

<% end %>

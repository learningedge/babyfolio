<html>
  <head>
    <title>Play</title>

    <%= stylesheet_link_tag "application", :media => "all" %>
  </head>
  <body>
    <div id="bf-mobile">
      <div class="play-popup <%= @activity[:time] %>">
        <div class="popup-wrapper">            
          <div class="reflect-icon reflect-icon-<%= @activity[:category] %>"></div>
          <h4><%= @activity[:title] %></h4>
          <div class="show-future">future activity</div>
          <div class="show-past">completed activity <span><%= current_child.first_name.capitalize %> already did this with you.</span></div>

          <% unless @activity[:response].blank? %>
            <p><%= @activity[:response] %></p>
          <% end %>

          <% unless @activity[:variations].blank? %>
            <h5>Variations</h5>
            <p><%= @activity[:variations] %></p>
          <% end %>

          <% unless @activity[:learning_benefits].blank? %>
            <h5>What Did We Just Do?</h5>
            <p><%= @activity[:learning_benefits] %></p>
          <% end %>

          <h5 class="play-final-header">This Is Good For <%= current_child.first_name.capitalize %> Because <%= current_child.replace_forms("#He/She#") %>  Has: </h5>
          <a class="btn" href="/api/v1/watch/<%= @activity[:mid] %>"><%= truncate(@activity[:ms_title], :length => 40) %></a>
        </div>
      </div>
    </div>
  </body>
</html>

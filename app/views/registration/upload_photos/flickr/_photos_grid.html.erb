<div>
  Select photos:
</div>
<div class="photos">
  <div class="right-photos-container">
    <% photos.each do |photo| %>
    
      <span class="image flickr-image" id="<%= photo.id %>" url="<%= FlickRaw.url_b(photo) %>" thumb_url="<%= FlickRaw.url_s(photo) %>" onclick="select_flickr_photo(this);return false;">
        <div class="thumb" style="background: url('<%= FlickRaw.url_s(photo) %>') no-repeat">
        </div>
        <%= check_box_tag "flickr_photos[]", FlickRaw.url_b(photo) -%>
        <%= check_box_tag "flickr_pids[]", photo.id -%>
        <%= check_box_tag "media_titles[]", photo.title -%>
        <div class="title">
          <span class="media_title_text hidden"><%= photo.title %></span>
          <%= truncate(photo.title, :length => 10) %>
        </div>
      </span>

    <% end %>
    <div class="clear"></div>
  </div>
  <div class="visibility">
    <span>Privacy level: <%= select_tag :visiblity, options_for_select(Moment::VISIBILITY) -%></span>
  </div>
  <div class="buttons-container">    
    <span><%= submit_tag "Import selected photos", :class => 'registration-submit-button' -%></span>
    <span><a class="registration-submit-button" href="#" onclick="go_to_flickr_sets();return false;">Go back to galleries</a></span>
  </div>
  
</div>

<div>
  Select photos:
</div>
<div class="photos">
  <div class="right-photos-container">
  <% @photos.each do |photo| %>
    <%# index = photo.images.index {|img| img.width <= 180} %>
        <span class="image facebook-image" id="<%= photo.identifier %>" url="<%= photo.source %>" thumb_url="<%= photo.images[-2].source %>" onclick="select_facebook_photo(this);">
      <div class="thumb" style="background-image: url('<%= photo.images[-2].source %>')">
      </div>
      <%= check_box_tag "facebook_photos[]", photo.source -%>
      <%= check_box_tag "facebook_pids[]", photo.identifier -%>
      <%= check_box_tag "media_titles[]", photo.name -%>
      <div class="title">
        <span class="media_title_text hidden"><%= photo.name %></span>
        <%= truncate(photo.name, :length => 10) %>
      </div>
    </span>

  <% end %>
  <div class="clear"></div>
  </div>
  <div class="visibility">
    <span>Privacy level: <%= select_tag :visiblity, options_for_select(Moment::VISIBILITY) -%></span>
    
  </div>
  <div class="buttons-container">
    <span><%= submit_tag "Import selected photos", :class => 'registration-submit-button' -%></span>
    <span><a class="registration-submit-button" href="#" onclick="go_to_facebook_albums();return false;">Go back to galleries</a></span>
  </div>

  

</div>


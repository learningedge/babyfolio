<h1>Welcome</h1>

<% unless @user.nil? %>
  <h2>Please fill up below form in order to confirm your account.</h2>
  <%= render "shared/error_messages", :target => @user %>
  <%= form_for @user, :url => confirmation_update_user_path, :method => :put do |f| %>
    <%= f.hidden_field :email %>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, :value => @user.email.split('@').first %><br />
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %><br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <br />
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %><br />
    <br />
    <%= f.submit "Submit" %>
  <% end %>
<%  else %>
    <h2>You have already accepted invitation.</h2>
<% end %>

<hr />
    <%= form_for user, :url => {:action => "update_password" }, :remote => true, :method => :put, :html => {:id => "change-password-form"} do |form| %>
        <%= render "shared/error_messages", :target => user, :summary => "There were some errors with your password change:" %>

        <div class="password row">
          <span class="label">
            <%= label_tag "current_password" %>
          </span>
          <span class="field">
            <%= password_field_tag "current_password" %>
          </span>
        </div>


        <div class="password row">
          <span class="label">
            <%= form.label :password, "Change password" %>
          </span>
          <span class="field">
            <%= form.password_field :password %>
          </span>
        </div>

        <div class="password row">
          <span class="label">
            <%= form.label :password_confirmation %>
          </span>
          <span class="field">
            <%= form.password_field :password_confirmation %>
          </span>
        </div>

          <div class="submit">
            <%= form.submit "Update" %>
          </div>

    <% end %>
    <div class="clear"></div>
    
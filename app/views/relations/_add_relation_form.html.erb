<%= form_for user, :remote => true, :url => relations_path, :html => {:id => "new-relation-form"} do |form| %>
    <%= render "shared/error_messages", :target => user, :summary => "There were some errors while inviting:" %>

    <div class="first-name row">
      <span class="label">
        <%= form.label :first_name %>
      </span>
      <span class="field">
        <%= form.text_field :first_name %>
      </span>
    </div>
    <div class="last-name row">
      <span class="label">
        <%= form.label :last_name %>
      </span>
      <span class="field">
        <%= form.text_field :last_name %>
      </span>
    </div>

    <div class="email row">
      <span class="label">
        <%= form.label :email %>
      </span>
      <span class="field">
        <%= form.text_field :email %>
      </span>
   </div>
    
    <div class="row">
        Relationship <%= select_tag :relation_type, options_from_collection_for_select(Relation::MEMBER_TYPE_NAME, :first, :last, :selected => Relation::MEMBER_TYPE[:FATHER]), {:class => "select-layout" } -%>
    </div>

    <div class="row">
        Admin <%= select_tag :is_admin, options_for_select([["No", 0], ["Yes", 1]]), :class => 'select-layout' -%>
    </div>

    <%= form.submit "Invite", :disable_with => "Inviting..." %>
<% end %>






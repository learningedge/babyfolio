  <div id="errorExplanation">
    <% summary ||= pluralize(target.errors.count, "error") + " prohibited this record from being saved:" %>
    <h2><%= summary %></h2>
    <ul>
      <% target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

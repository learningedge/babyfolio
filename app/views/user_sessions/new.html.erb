<div class="container">
  <div class="row">
    <div class="label"></div>
    <h4 style="display: inline-block;">Please enter user credentials in order to log into the site.</h4>
  </div>
  <div class="user-form">    
    <div id="login_left">
    <%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
      <div class="email row">
        <span class="label">
          <%= f.label :email %>
        </span>
        <span class="field">
          <%= f.text_field :email %>
        </span>
      </div>
      <div class="password row">
        <span class="label">
          <%= f.label :password %>
        </span>
        <span class="field">
          <%= f.password_field :password %>
        </span>
      </div>      
      <div class="row submit">
        <div class="label"></div>
          <%= f.submit "Login", :class => 'btn'%>
      </div>
    <% end %>
    <div class="clear"></div>
    <div class="forgot-link row">
      <div class="label"></div>
      Forgot password or can't log in? <%= link_to 'Click here', new_forgot_password_url -%>.
    </div>    
   </div>


  </div>
  <div class="clear"></div>


</div>

<% 
   popup_settings = {
     "height" => 545,
     "width" => 1020,
     "status" => 0,
     "toolbar" => 0
   } 

   settings = popup_settings.collect{|key,value|  key + '=' + value.to_s}.join(',')
%>


<script type="text/javascript">

$(function(){
  $('#user_session_email').focus();
})

function open_popup_login(href) {
  var left = (screen.width - <%= popup_settings["width"] %>)/2;
  var top = (screen.height - <%= popup_settings["height"] %>)/2;
  var text = "facebook_login";
  var settings = "<%= settings -%>, top=" + top + ",left=" + left;

  window.open(href, text, settings);
}

</script>



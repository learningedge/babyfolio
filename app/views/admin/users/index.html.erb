<div id="all_products" class="float-none">

  <% if @title %>
    <div><h1><%= @title -%> <%= link_to "(View All)", admin_users_path, :style => "font-size: 16px"  %></h1> </div>
  <% end %>

  <div class="pagination">
    <i><%= @users.count -%> Users</i>
    <div><%= will_paginate @users, :container => false, :previous_label => '', :next_label => '', :separator => " | " -%></div>
  </div>

  <table class="products">
    <thead>
      <tr>
        <th></th>
        <th><%= sort_link 'FIRST NAME', 'users.first_name'  -%></th>
        <th><%= sort_link 'LAST NAME', 'users.last_name' -%></th>
        <th><%= sort_link 'EMAIL', 'users.email' -%></th>
        <th><%= sort_link 'CREATED DATE', 'users.created_at' -%></th>
        <!--th>CONFIRMED</th-->
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <div class="usr-thumbnail" style="background-image: url(<%=  user.get_image_src(:profile_small)%>)"></div>
          </td>
          <td><a href="<%= edit_admin_user_path(user) -%>"><%= user.first_name -%></a></td>
          <td><a href="<%= edit_admin_user_path(user) -%>"><%= user.last_name -%></a></td>
          <td><a href="<%= edit_admin_user_path(user) -%>"><%= user.email -%></a></td>          
          <td><%= user.created_at.to_date -%></td>
          <!--td><%#= user.email_confirmed ? "yes" : "no" -%></td-->
          <td>
              <div class="action">
                <span>Action</span>
                <div>
                  <ul>
                    <li>Action</li>
                    <li><%= link_to 'Edit', edit_admin_user_path(user) %></li>
                  </ul>
                </div>
              </div>
            </td>
        </tr>
      <% end %>


    </tbody>
  </table>

</div>




<p class="hint">(<b class="red">*</b> - Required Fields.)</p>
<h2>BASICS</h2>

<%= form_for([:admin, @family]) do |f| %>
  <fieldset class="basics">
    <% if @family.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this admin_blog from being saved:</h2>

        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <%= f.label :name %>
      <%= f.text_field :name, :size => 30 %>
      <span class="red">*</span>
    </div>

    <div class="row">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, :size => 30 %>
    </div>
  </fieldset>
  <h2>CHILDREN</h2>
  <fieldset class="options">
    <table class="list-container">
      <% @family.children.each do |child| %>
        <tr>
          <td><%= get_image_tag child, "small" -%></td>
          <td><%= child.first_name %></td>
          <td><%= child.birth_date.to_date %></td>
          <td><%= moment_count child.moments -%></td>
        </tr>          
      <% end %>
    </table>
  </fieldset>


  <h2><%= (@family.name + "'s parents").upcase -%></h2>
  <fieldset class="options">
    <ul class="list-container">
      <% @parents.each do |parent| -%>
        <li>
          <div><%= link_to parent.email, edit_admin_user_path(parent.id) %></div>
        </li>
      <% end %>
    </ul>
  </fieldset>

  <% unless @rest_users.blank? %>
  <h2><%= (@family.name + "'s family & friends").upcase -%></h2>
  <fieldset class="options">
    <ul class="list-container">
      <% @rest_users.each do |user| -%>
        <li>
          <div><%= link_to user.email, edit_admin_user_path(user.id) %> <%= "(pending)" if @family.pending? user.id -%></div>
        </li>
      <% end %>
    </ul>
  </fieldset>
  <% end %>



  <%= link_to 'Back', admin_users_path, :class => 'btn gray' %><br />
  <input type="submit" value="Update User" />
<% end %>


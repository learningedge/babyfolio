<div id="child-folio-page">
    <div class="child-img">
          <%= get_image_tag @selected_child, "large" -%>
    </div>
        <h4 id="title"><%= @selected_child.first_name -%>'s Unique Story</h4>
        <div id="drop_list">
          <%= form_tag({}, { :method => :get }) do -%>
            <%= select_tag "people", options_for_select(@children.map { |c| ["#{c.first_name}'s Profile", c.id] }, @selected_child.id), {:onChange => "document.location = '/children/' + this.value" } -%>
            <%= link_to "Add Child", new_child_children_path, :class => "add_child_link" %>
          <% end -%>
          <span id="setting_kids">            
            <p></p>
            <p>Go to: <%= link_to "Reflect page", child_reflect_children_path %></p>            
          </span>
        </div>

             

          

      <script type="text/javascript">
        $(function(){
          //$('.popup').jqm();
          $('#container_right .logo').click(function(){
          
            $('.popup').append($('.milestone-popup'));
            $('.popup').css({left: ($(window).width()/2-$('.popup').width()/2),top: ($(window).height()/2-$('.popup').height()/2+$(window).scrollTop())})
            //$('.popup').jqmShow();
            return false;            
          })
        })

        function show_milestone(object) {
            var width = 520;
            var height = 650;
            var left = parseInt((screen.availWidth/2) - (width/2));
            var top = parseInt((screen.availHeight/2) - (height/2));
            var url = '<%= show_milestone_url( :child_id => @selected_child.id  ) %>' + '&mid=' + $(object).attr('rel');
            window.open(url,"_blank","menubar=0,resizable=0,scrollbars=1,width=520,height=650,location=0,left=" + left + ",top=" + top + ",screenX=" + left + ",screenY=" + top);
          }
        </script>
</div>
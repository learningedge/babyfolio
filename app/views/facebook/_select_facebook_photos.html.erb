<div class="preloader">
</div>

<% if current_user.has_facebook_account? %>

  <div class="facebook">

    <span id="selected-facebook-photos">
      <h2>Selected</h2>
    </span>

    <span id="facebook-ajax-grid"  class="facebook-grid">

	  <%= render :partial => 'facebook/albums' %>

    </span>

    <div class="clear"></div>

  </div>

<% else %>

  <%= flash[:facebook_error] %>  

  <div>
    You dont have facebbok account connected. 
    <%= link_to 'Click here', '/auth/facebook?display=popup', :onclick => "window.open(this.href, 'facebook_login', 'height=545,width=1020');return false;" -%> to connect one.
  </div>

<% end %>
